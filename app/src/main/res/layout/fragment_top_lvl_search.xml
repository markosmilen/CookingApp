<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TopLvlSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:text="Search"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_curved"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_search"
            android:textColor="@color/color_primary"
            android:textColorHint="@color/color_primary"
            android:hint="Recipes/Ingridients..."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
       >

        <Button
            android:id="@+id/main_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_vegetable_70"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/asian_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/main_dish_search"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_sushi"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/vegeterian_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/main_dish_search"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_vegetable_70"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/main_dish_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Main"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/main_dish_search"
            android:elevation="20dp"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/vegetarian_dish_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Vegetarian"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/main_dish_search"
            android:layout_toLeftOf="@id/main_dish_title"
            android:elevation="20dp"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/asian_dish_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Asian"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/main_dish_title"
            android:layout_alignBottom="@id/main_dish_search"
            android:elevation="20dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/dessert_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_vegetable_70"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/pasta_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dessert_dish_search"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_vegetable_70"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/quick_dish_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/dessert_dish_search"
            android:background="@drawable/button_shape_inverse"
            android:drawableTop="@drawable/ic_vegetable_70"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>


</LinearLayout>
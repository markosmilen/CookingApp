<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <ImageView
            android:id="@+id/popular_item_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/popular_item_chategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:text="Meal Title"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:elevation="5dp"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/popular_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_above="@id/popular_item_chategory"
            android:text="Meal Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:elevation="5dp"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_gradient_black_down"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>